<%= content_tag :div, id: "comment-#{comment.id}" do %>
  <li class="media" style="border-top: 1px solid grey">
    <div class="mdeia-body">
      <small>
        <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
        <strong><%= comment.user.name %></strong>
        commented <%= time_ago_in_words(comment.created_at) %> ago 
        <% if can? :destroy, comment %>
          | <%= link_to "Delete", comment_url_helper(comment), method: :delete, remote: true %>
        <% end %>
      </small>
      <p><%= comment.body %></p>
    </div>
  </li>
<% end %>
