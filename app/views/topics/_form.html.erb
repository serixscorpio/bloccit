<%= simple_form_for topic, html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :public, inline_label: 'Public topic', label: false %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, 'Save' %>
    </div>
  </div>
<% end %>
